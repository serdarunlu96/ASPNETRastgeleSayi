@{
    ViewData["Title"] = "Gonder";
}

@{
    Random rnd = new Random();
    int rastgeleNumara = rnd.Next(1000, 9999); 
}

<form method="post" asp-action="Gonder">
    <div class="form-group">
        <label for="Ad">Adınız:</label>
        <input type="text" id="Ad" name="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <input type="hidden" id="RastgeleNumara" name="RastgeleNumara" value="@rastgeleNumara" />
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>
